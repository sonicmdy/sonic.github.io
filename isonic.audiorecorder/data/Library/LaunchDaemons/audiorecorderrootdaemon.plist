<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>KeepAlive</key>
	<true/>
	<key>Label</key>
	<string>audiorecorderrootdaemon</string>
	<key>Program</key>
	<string>/usr/bin/audiorecorderrootdaemon</string>
	<key>RunAtLoad</key>
	<true/>
	<key>MachServices</key>
	<dict>
		<key>net.limneos.audiorecorderxs.rootdaemon</key>
		<dict>
			<key>ResetAtClose</key>
			<true/>
		</dict>
	</dict>	
	<key>StandardErrorPath</key>
	<string>/var/log/audaemon.log</string>
	<key>StandardOutPath</key>
	<string>/var/log/audaemon.log</string>
	<key>UserName</key>
	<string>root</string>
</dict>
</plist>
